{
  "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<ECS_TASK_ROLE>",
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<ECS_EXECUTION_ROLE>",
  "family": "<ECS_TASK_FAMILY>",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "application",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "TZ",
          "value": "Asia/Singapore"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "/fq/<ENV>/DB_HOST"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "/fq/<ENV>/DB_NAME"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/fq/<ENV>/DB_PASSWORD"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/fq/<ENV>/DB_USERNAME"
        },
        {
          "name": "NODE_ENV",
          "valueFrom": "/fq/<ENV>/NODE_ENV"
        },
        {
          "name": "SESSION_SECRET",
          "valueFrom": "/fq/<ENV>/SESSION_SECRET"
        },
        {
          "name": "TWILIO_ACCOUNT_SID",
          "valueFrom": "/fq/<ENV>/TWILIO_ACCOUNT_SID"
        },
        {
          "name": "TWILIO_MESSAGING_SID",
          "valueFrom": "/fq/<ENV>/TWILIO_MESSAGING_SID"
        },
        {
          "name": "TWILIO_API_SECRET",
          "valueFrom": "/fq/<ENV>/TWILIO_API_SECRET"
        },
        {
          "name": "TWILIO_API_KEY",
          "valueFrom": "/fq/<ENV>/TWILIO_API_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "fq-application",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}